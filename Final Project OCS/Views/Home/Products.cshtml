@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="cat_product_area section_gap">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                

                <div id="productContainer">
                     @Html.Partial("_ProductPartial", Model) 
                </div> 
            </div>

            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Browse Categories</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li>
                                        @if (ViewBag.IsSwap)
                                        {
                                            <a href="#" onclick="loadProducts('@category.Id',true)">
                                                @category.CategoryName
                                            </a>
                                           
                                        }
                                        else
                                        {
                                            <a href="#" onclick="loadProducts('@category.Id',false)">
                                                @category.CategoryName
                                            </a>
                                        }

                                    </li>
                                }
                            </ul>
                        </div>
                    </aside>

                   
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        function loadProducts(categoryId,isSwap) {
            $.ajax({
                url: '@Url.Action("GetProductPartialView", "Home")',
                type: 'GET',
                data: { 
                    categoryId: categoryId,
                    isSwap: isSwap
                },
                success: function (data) {
                    $('#productContainer').html(data); 
                },
                error: function () {
                    alert('Failed to load products.');
                }
            });
        }
    </script>
            

}