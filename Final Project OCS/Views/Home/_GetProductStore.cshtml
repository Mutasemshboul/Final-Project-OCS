@model IEnumerable<StoreProduct>

<div class="latest_product_inner">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="single-product">
                    <div class="product-img">
                        <img class="card-img"
                             src="img/product/inspired-product/i1.jpg"
                             alt="" />
                        <div class="p_icon">

                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-isProductStore="true">
                                    <i class="ti-eye"></i>
                                </a>
                            
                           
                            <a href="#">
                                <i class="ti-heart"></i>
                            </a>
                            <a href="#">
                                <i class="ti-shopping-cart"></i>
                            </a>
                        </div>
                    </div>
                    <div class="product-btm">
                        <a href="#" class="d-block">
                            <h4>@item.Title</h4>
                        </a>
                      
                            <div class="mt-3">
                                <span class="mr-4">$@item.Price</span>
                            </div>
                        

                    </div>
                </div>
            </div>
        }

    </div>
</div>
