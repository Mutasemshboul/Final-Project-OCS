@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="col-lg-12">
                    <h3><span>Show</span> Your <br />Personal <span>Style</span></h3>
                    <h4>Fowl saw dry which a above together place.</h4>
                    
                </div>
            </div>
        </div>
    </div>
</section>
<section class="inspired_product_area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span> products</span></h2>
                    <p>Bring called seed first of third give itself now ment</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var product in ViewBag.Products)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img src="@product.FirstImageUrl" width="230" height="200" alt="" />
                            <div class="p_icon">
                                <a asp-action="Details" asp-route-id="@product.Product.Id" asp-route-isSwap="false">
                                    <i class="ti-eye"></i>
                                </a>
                                
                               
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4>@product.Product.Title</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">$@product.Product.Price</span>
                                @* <del>$35.00</del> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
          

            
        </div>
    </div>
</section>


<section class="inspired_product_area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Swap Products</span></h2>
                    <p>Bring called seed first of third give itself now ment</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var product in ViewBag.ProductSwaps)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img width="230" height="200" src="@product.FirstImageUrl" alt="" />
                            <div class="p_icon">
                                <a asp-action="Details" asp-route-id="@product.ProductSwap.Id" asp-route-isSwap="true">
                                    <i class="ti-eye"></i>
                                </a>


                                
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4>@product.ProductSwap.Title</h4>
                            </a>
                            
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>